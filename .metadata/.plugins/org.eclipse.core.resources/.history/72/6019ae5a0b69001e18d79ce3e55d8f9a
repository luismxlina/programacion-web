package tests;

import java.util.ArrayList;

import es.uco.pw.classes.campamento.Campamento;
import es.uco.pw.gestores.GestorCampamentos;

public class GestorCampamentosTest {

    private GestorCampamentos gestorCampamentos;

    @BeforeEach
    public void setUp() {
        ArrayList<Campamento> campamentos = new ArrayList<>();
        Campamento campamento1 = new Campamento(1, "Campamento 1", "Descripción 1");
        Campamento campamento2 = new Campamento(2, "Campamento 2", "Descripción 2");
        campamentos.add(campamento1);
        campamentos.add(campamento2);
        gestorCampamentos = GestorCampamentos.getInstance(campamentos);
    }

    @Test
    public void testAltaCampamento() {
        Campamento nuevoCampamento = new Campamento(3, "Campamento 3", "Descripción 3");
        boolean altaExitosa = gestorCampamentos.altaCampamento(nuevoCampamento);
        Assertions.assertTrue(altaExitosa);
    }

    @Test
    public void testBuscarCampamento() {
        boolean campamentoEncontrado = gestorCampamentos.buscarCampamento(1);
        Assertions.assertTrue(campamentoEncontrado);
    }

    @Test
    public void testBuscarCampamentoInexistente() {
        boolean campamentoEncontrado = gestorCampamentos.buscarCampamento(3);
        Assertions.assertFalse(campamentoEncontrado);
    }
}